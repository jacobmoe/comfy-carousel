= link_to 'Add New Carousel', new_admin_carousel_carousel_path, :class => 'btn btn-primary'

.page-header
  %h1 Carousels

%ul.list
  - @carousels.each do |carousel|
    %li
      .item
        .icon
        .action_links.pull-left
          = link_to pluralize(carousel.slides.count, 'Slide'), admin_carousel_carousel_slides_path(carousel), :class => 'btn'
          = link_to 'Edit', edit_admin_carousel_carousel_path(carousel), :class => 'btn'
          = link_to 'Delete', admin_carousel_carousel_path(carousel), :method => :delete, :confirm => 'Are you sure?', :class => 'btn'
        .label.pull-right
          = link_to carousel.label, admin_carousel_carousel_slides_path(carousel)
          .sublabel
            = carousel.identifier
            - if carousel.dimensions.present?
              = "[#{carousel.dimensions}]"